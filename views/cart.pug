extends  layout
block content
    h1 Add to Cart
    - var total = 0;
        table.table
            thead
                th Name
                th Price
                th Quantity
                th Delete
                
            tbody
                each item in cart

                    - total += Number(item.Price);
                    tr
                        td=item.Name
                        td=item.Price
                        td=item.quantity
                        td
                            a(href="/products/cart/remove/"+item._id,class="btn btn-danger") Delete
            TFoot
                    tr
                        td Total
                        td=total
                        
    a.btn.btn-outline-dark.mt-auto(href="/checkout",class="btn btn-info") Checkout




