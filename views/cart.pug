extends  layout
block content
    h1 Add to Cart
    - var total = 0;
        table.table
            thead
                th Name
                th Price
                th Quantity
                th Description
                th Status
                th Action
                
            tbody
                each item in cart

                    - total += Number(item.Price);
                    tr
                        td=item.Name
                        td=item.Price
                        td=item.quantity
                        td=item.Description
                        td=item.Status
                        td
                            a(href="/products/cart/remove/"+item._id,class="btn-btn-danger") Delete


                
            TFoot
                    tr
                        td Total
                        td=total



